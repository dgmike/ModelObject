{
	"name": "model/object",
	"description": "An easy model object to manage database",
	"version": "v0.0.0",
	"type": "library",
	"keywords": [
		"database",
		"mysql",
		"sqlite",
		"pdo"
	],
	"homepage": "http://github.com/dgmike/ModelObject",
	"license": "MIT",
	"authors": [
		{
			"name": "Michael Granados",
			"email": "contato@dgmike.com.br",
			"role": "Developer"
		}
	],
	"autoload": {
		"psr-4": {
			"Model\\": "src/Model/"
		}
	},
	"suggest": {
		"ext-pdo-mysql": "To connect with mysql databases",
		"ext-pdo-sqlite": "To connect with sqlite databases, use it for test ;)"
	},
	"require": {
		"php": "^7.1",
		"ext-pdo": "*"
	},
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    }
}
